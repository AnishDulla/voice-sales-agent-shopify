# Application
APP_ENV=development
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Shopify
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SHOPIFY_API_VERSION=2024-01

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=your-deepgram-api-key-here
DEEPGRAM_MODEL=nova-2

# Cartesia (Text-to-Speech)  
CARTESIA_API_KEY=your-cartesia-api-key-here
CARTESIA_MODEL=sonic-3
CARTESIA_VOICE_ID=f786b574-daa5-4673-aa0c-cbe3e8534c02  # Default voice
CARTESIA_LANGUAGE=en
CARTESIA_SPEED=1.0  # 1.0 = normal, 0.5 = slow, 2.0 = fast

# LiveKit
LIVEKIT_URL=wss://your-instance.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Database (optional)
DATABASE_URL=postgresql://user:pass@localhost/voice_agent

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Session
SESSION_TTL=3600
MAX_SESSIONS_PER_USER=5

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Voice settings
VAD_ENABLED=true
VAD_THRESHOLD=0.5
STT_LANGUAGE=en-US
TTS_VOICE=alloy

# Agent settings
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=30
AGENT_CONTEXT_WINDOW=10

# Feature flags
ENABLE_VOICE=true
ENABLE_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_RECOMMENDATIONS=false